/* components/swiper/swiper.wxss */
.swiperbase {
  position: relative;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  background-size: 100%;

}

.swiperbase:before {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.swiper-item image{
  width: 100%;
  height:100%;
}
swiper{
  height: 360rpx;/* 需要连同.swiper-item的height一起改 */
  margin: 0
}
.swiper-item {
  display: block;
  height: 360rpx;
}