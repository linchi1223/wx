/* pages/goodslist/goodslist.wxss */
.good{
  /* background-color: yellowgreen; */
  height: 200rpx;
  display: flex;
  padding:  10rpx;
  border-bottom: 2px gainsboro solid;
}
.img{
  /* background-color: red; */
  width: 260rpx;
}
.img image{
width: 100%;
height: 100%;
}
.info{
    /* background-color: yellow; */
    display: flex;
    padding: 5rpx;
    width: 490rpx;
    justify-content: space-between;
}
.info .infoL{
  padding: 5rpx;
    /* background-color: wheat; */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 80%;
    height: 170rpx;
    margin: 10rpx 0;
}
.info .infoL>view{
   overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.info .infoL .goodname{
  font-size: 30rpx;
  font-weight: 900;
}
.info .infoL .goodinfo{
  font-size: 20rpx;
  font-weight: 900;
  margin: 0 15rpx;
}
.info .infoL .goodprice{
  font-size: 40rpx;
  margin: 0 15rpx;
}
.info .infoR{
    /* background-color: teal; */
    width: 18%;
}
.infoR .addcar{
  width: 60rpx;height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: gold;
  border: 1px gainsboro solid;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top:80rpx; 
}